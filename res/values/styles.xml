<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="style1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#8B4311</item>
    </style>

    <style name="amountStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="titleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="accountListTitleStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/main_style_color</item>
    </style>

    <style name="accountListAmountStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="dayDetailListMonthDayStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dayDetailListWeekDayStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="dayDetailListConsumeTypeStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/deep_gray</item>
    </style>

    <style name="dayDetailListAccountTypeStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <style name="dayDetailListConsumeAmountType">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

</resources>